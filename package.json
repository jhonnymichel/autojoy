{
  "name": "autojoy",
  "version": "1.8.5",
  "description": "Automatically update emulators and games input settings based on what's connected to your computer!",
  "main": "src/main/index.js",
  "entry": "src/main/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron src/main/index.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "install": "node-gyp rebuild",
    "postinstall": "node scripts/copy-sdl.js"
  },
  "build": {
    "appId": "com.jhonnymichel.autojoy",
    "directories": {
      "buildResources": "electron-builder"
    },
    "asarUnpack": [
      "build/Release/SDL3.dll"
    ]
  },
  "type": "module",
  "author": "Jhonny Michel <jhonnymichel@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "fast-xml-parser": "^4.5.1",
    "ini": "^5.0.0",
    "node-addon-api": "^8.3.0",
    "xinput-ffi": "^4.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "node-gyp": "^11.1.0"
  }
}
